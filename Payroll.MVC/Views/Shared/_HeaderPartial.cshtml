<header class="main-header">
    <a href="@Url.Action("", "Home")" class="logo" style="background-color: white;">
        <img src="~/logo.jpg" style="width: 100%; height:100%;" />
        @*<span class="logo-lg">MRI</span>*@
    </a>
    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <span class="navbar-brand">Welcome @HttpContext.Current.User.Identity.Name</span>
            <span class="navbar-brand">
                Current Period :
            </span>
            <span class="navbar-brand" id="payroll-period-desc">
                @Payroll.Repository.PayrollPeriodRepo.SelectedPeriod.Description
            </span>
            <ul class="nav navbar-nav">
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        <a href="javascript:document.getElementById('logoutForm').submit()"><button class="btn btn-danger">Log out</button></a>
                    }
                }
                else
                {
                    <a href="@Url.Action("Logout","Account")"><button class="btn btn-success">Login</button></a>
                }
            </ul>
        </div>
    </nav>
</header>
